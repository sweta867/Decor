<?xml version="1.0"?>
<ruleset name="Ademti WordPress Project">
	<description>Coding standard definitions for Ademti Software Ltd. WordPress projects</description>
	<rule ref="WordPress-Extra">
		<exclude name="Generic.Files.LowercasedFilename.NotFound"/>
		<exclude name="WordPress.XSS.EscapeOutput.OutputNotEscaped"/>
		<exclude name="Generic.Arrays.DisallowShortArraySyntax.Found"/>
		<exclude name="WordPress.WhiteSpace.PrecisionAlignment.Found"/>
		<exclude name="WordPress.Security.NonceVerification.Recommended"/>
		<exclude name="WordPress.Security.NonceVerification.Missing"/>
		<exclude name="WordPress.PHP.DiscouragedPHPFunctions.serialize_serialize"/>
		<exclude name="WordPress.PHP.DiscouragedPHPFunctions.serialize_unserialize"/>
		<exclude name="WordPress.PHP.NoSilencedErrors.Discouraged"/>
		<exclude name="WordPress.Security.EscapeOutput.OutputNotEscaped"/>
		<exclude name="WordPress.DB.PreparedSQL.NotPrepared"/>
		<exclude name="WordPress.DB.PreparedSQL.InterpolatedNotPrepared"/>
		<exclude name="Squiz.PHP.NonExecutableCode.Unreachable"/>
	</rule>
	<rule ref="WordPress.Files.FileName">
		<properties>
			<property name="strict_class_file_names" value="false" />
		</properties>
	</rule>
	<file>src/</file>
	<file>woocommerce-gpf.php</file>
	<file>woocommerce-product-feeds-install.php</file>
	<file>woocommerce-product-feeds-bootstrap.php</file>
</ruleset>

